<!DOCTYPE html>
<html>
    <head>
        <title>Update my profile</title>
        <% include partial/header.ejs %>
        <% include partial/navbar.ejs %>
    </head>
    <body>
        <h1>My profile</h1>
        <form action="/updateprofile" role="form" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <p class="form-control" id="username" name="username"><%= username %></p>
            </div>
            <div class="form-group">
                <label for="password">If you wish to change your password, please enter a new password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
            </div>
            <div class="form-group">
                <label for="fullname">Full Name</label>
                <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter your name" value="<%- row.fname %>">
            </div>
            <div class="form-group">
                <label for="gender">Gender</label>
                <input type="radio" name="gender" value="M" <% if(row.gender == "M") { %> checked <% } %> > Male
                <input type="radio" name="gender" value="F" <% if(row.gender == "F") { %> checked <% } %> > Female
            </div>
            <div class="form-group">
                <label for="dob">Birthday</label>
                <input type="date" class="form-control" id="dob" name="dob" <% if(row.dob) { %> value="<%- row.dob.toISOString().split('T')[0] %>" <% } %>>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="Block 123 Sunny Road ..." value="<%- row.addr %>">
            </div>
            <button type="submit" class="btn btn-primary">Update particulars</button>
        </form>
    </body>
</html>
